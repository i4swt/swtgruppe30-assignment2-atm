<Window x:Class="AirTrafficMonitor.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirTrafficMonitor.Gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Trackings" Grid.Column="0" Grid.Row="0"/>
        <ListView Name="ListViewTrackings" Grid.Column="0" Grid.Row="1"/>
        <Label Content="SeparationEvents" Grid.Column="1" Grid.Row="0"/>
        <ListView Name="ListViewSeparationEvents" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
